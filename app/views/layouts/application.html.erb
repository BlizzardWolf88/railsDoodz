  </head>
  
  <%# We don't want a container for the home page%>
  <% if current_page?(root_path) %>
      <body>
      <%= render 'home/header'%>      
        <%= yield %>
      <% else %>
        <%= render 'home/header'%>
        <div class ="container">
          <% if notice%>
            <br/>
            <%=render 'layouts/alerts'%>
          <% end %>
            <%= yield %>
            <%=render 'layouts/confirm_delete'%>
        </div>
  <% end %>
  <body>
      
  <link rel="stylesheet" href ="application.css">

