<%= stylesheet_link_tag "gmapping", "data-turbo-track": "reload",defer:true %>
<%= form_with() do |form| %>

<div id ="formContent" class = "sizeCard">
    <div class="card text-center" >
      <div class="card-header">      
        <div class ="row">     
          <h2>Location Information!!!</h2>                  
         </button> 
        </div>
      </div>
      <div class="card-body" >         
          <div class="container-sm">           
            <div class = "row g-8 mb-3">
              <div class ="col">
                <button type="button" id= "showPicsBtn" class="btn btn-primary btn-lg active" data-bs-toggle="modal" data-bs-target="#ViewPics">
                  Show Pics
                </button>
            </div>          
            <div class = "row g-1">
               <div class ="col-5" >
                 <%= form.text_field :latitude,placeholder:"Enter Latitude", class:"form-control fw-bold ", data: {target: "maps.lat"} %>
               </div>    
               <div class ="col-5" data-action="keydown->maps#keydown" >
                  <%= form.text_field :longtitude,placeholder:"Enter Longitude" ,class:"form-control fw-bold ", data: {target: "maps.lon"} %>
                </div>
                <div class = "col-2" data-action="click->maps#goToSpot">
                  <button type="button" class="btn btn-lg btn-primary active px-4 py-1">Go!</button>
                </div>
               </div>              
            </div>
          </div>               
           <br/>
          </div>
          <br/> 
          <div class="scrollable">       
           <%# Compass Starts Here %>
            <%= render "compass", loc: @loc, id: :loc_user_id  %> 
           <%# End of Compass %>
              <br/>
              <%# Form Container %>
              <div class="container-sm">
                <div class = "mb-3">  
                      <%= form.select :loctype,['Stand Pin','Buck Bed Pin','Access Point'] ,{prompt:"Select A Loc Type"}, {class:"form-select fw-bold",data:{action:"click->maps#setLocType",target:"maps.loctype"}} %>                     
                </div>   
                <div class="mb-3">  
                  <%= form.text_field :name, class:"form-control fw-bold", placeholder:"Spot Name",data: {target: "maps.name"} %>
                </div>
                <div class="mb-3">  
                  <%= form.text_field :create_date, class:"form-control fw-bold", placeholder:"The Date",data: {target: "maps.date"} %>
                </div>
                <div class="mb-3" >
                  <textarea class="form-control fw-bold" id="exampleFormControlTextarea1" placeholder="Notes" rows="3" data-target="maps.notes"></textarea>
                </div>
                <div class = "mb-3">
                <%= form.text_field :num_sits, class:"form-control fw-bold", placeholder:"Number of Times Hunted",data: {target: "maps.numsits"} %>           
                </div>     
                <div class="mb-3" >
                  <button data-action="click->maps#saveSpot" type="button" class="btn btn-primary btn-lg active goodGood" >
                    Save Spot
                </button> 
                </div>
                      
              </div>  
          </div>     
      </div>
      <div class="card-footer text-muted">
       
      </div>
    </div>
</div> 


<% end %>